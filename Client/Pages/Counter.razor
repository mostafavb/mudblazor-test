@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
<MudText Class="mb-4">Current count: @currentCount</MudText>
<MudText Class="mb-4">Should render: @shouldRender</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCountWithRendered">Click with rendered</MudButton>
<MudButton Color="Color.Secondary" Variant="Variant.Filled" @onclick="IncrementCountWithoutRendered">Click without rendered</MudButton>


@code {
    private int currentCount = 0;
    private bool shouldRender = true;


    protected override bool ShouldRender()
    {
        return shouldRender;
    }

    private void IncrementCountWithoutRendered()
    {
        shouldRender = false;
        currentCount++;
    }

    private void IncrementCountWithRendered()
    {
        shouldRender = true;
        currentCount++;
    }
}
